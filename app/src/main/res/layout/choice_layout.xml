<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:id="@+id/choice_scroll"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginRight="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Lime"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_resturant">

                    <ImageView
                        
                        android:alpha="1"
                        android:src="@drawable/fork_knife"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="Restaurant"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Brown"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_cafes">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/coffee"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:text="Cafes"
                        android:alpha="1"
                        android:layout_marginLeft="6dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginRight="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Orange"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_clubs">

                    <ImageView
                        
                        android:alpha="1"
                        android:src="@drawable/dj"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        
                        android:text="Night Clubs"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/ClaretRed"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_malls">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/shoppingcart"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="Malls"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginRight="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Red"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_bowling">

                    <ImageView
                        
                        android:alpha="1"
                        android:src="@drawable/bowling"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="Bowling"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Magenta"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:focusableInTouchMode="false"
                    android:id="@+id/choice_movie">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/movie_camera"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="Movie"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginRight="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Emerald"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_food">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/burger"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:text="Food"
                        android:layout_marginLeft="6dp"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Teal"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_water_parks">

                    <ImageView

                        android:alpha="1"
                        android:src="@drawable/amupark"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:text="Amusement Park"
                        android:layout_marginLeft="6dp"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginRight="5dp"
                    android:gravity="center|bottom"
                    android:background="@color/Mauve"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/choice_dhaba">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/park"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="Park"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|bottom"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:id="@+id/college_spots">

                </LinearLayout>

            </LinearLayout>

             <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:alpha="0.8"
                    android:gravity="center|bottom"
                    android:background="@color/Purple"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                 android:id="@+id/choice_search">

                    <ImageView
                        android:alpha="1"
                        android:src="@drawable/info"
                        android:layout_width="126dp"
                        android:layout_height="126dp" />

                    <TextView
                        android:layout_marginLeft="6dp"
                        android:text="About"
                        android:alpha="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="bottom"
                        android:textColor="#ffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
             </LinearLayout>





        </LinearLayout>

</ScrollView>