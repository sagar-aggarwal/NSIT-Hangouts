<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:layout_weight="2"
            android:textColor="@color/ClaretRed"
            android:layout_width="0dp"
            android:textStyle="bold|italic"
            android:text="Name Of The Place"
            android:layout_height="28dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/place_name" />

        <TextView
            android:text="4.1"
            android:textSize="20dp"
            android:padding="2dp"
            android:gravity="center_horizontal"
            android:background="@drawable/green_button_sqaure_rating"
            android:textColor="@android:color/white"
            android:layout_weight="0.38"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:id="@+id/place_rating" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <TextView
                android:textSize="16dp"
                android:textColor="#ff000000"
                android:textStyle="italic"
                android:layout_width="fill_parent"
                android:text="1,Harbourside Jetty, Darling Harbour"
                android:layout_weight="1.5"
                android:layout_height="0dp"
                android:id="@+id/place_vicinity" />

            <LinearLayout
                android:padding="3dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="0.8"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:src="@drawable/coffee_logo"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="fill_parent"
                    android:id="@+id/place_icon" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:textColor="#ff000000"
                    android:textStyle="italic"
                    android:text="Open Now"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:id="@+id/place_open" />

            </LinearLayout>

            <LinearLayout
                android:padding="3dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/red_button_sqaure"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold|italic"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Locate"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/place_locate" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:scaleType="fitXY"
            android:background="@android:drawable/picture_frame"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="145dp"
            android:id="@+id/place_photo" />


    </LinearLayout>



</LinearLayout>